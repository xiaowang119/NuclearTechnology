<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="module2.DecayCalculation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#009000"
            android:text="放射性核素："
            android:gravity="center"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:hint="              选择核素..           "
            android:textSize="15dp"
            android:id="@+id/output3"
            android:gravity="center"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sear"
            android:id="@+id/imagebt1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="当前活度："
            android:textColor="#009000" />

        <EditText
            android:id="@+id/ac2_et_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入当前活度.."
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spinner_ac2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/danwei"
            android:prompt="@string/unit_ac"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#009000"
            android:text="作用时长：    "/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ac2_imput_year"
            android:inputType="number"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"/>
        <EditText
            android:layout_width="50dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ac2_imput_month" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"/>
        <EditText
            android:layout_width="50dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:id="@+id/ac2_imput_day"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="100dp">
        <EditText
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/ac2_imput_hour" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/ac2_imput_minute"
            android:gravity="center"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/ac2_imput_second"
            android:gravity="center"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="物质质量："
            android:textColor="#009000" />

        <EditText
            android:id="@+id/ac2_et_mass"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="输入物质质量.."
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="  克(g)"
            android:textColor="#009000" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ac2_bt_calculate1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="#1ec900"
            android:elevation="0dp"
            android:text="衰变活度计算"
            android:textColor="#FFFF00"
            android:textSize="15dp" />

        <Button
            android:id="@+id/ac2_bt_calculate2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="#1ec900"
            android:text="初始活度计算"
            android:textColor="#FFFF00"
            android:textSize="15dp" />

        <Button
            android:id="@+id/ac2_bt_calculate3"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="#1ec900"
            android:text="物质活度计算"
            android:textColor="#FFFF00"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/ac2_tv_active"
            android:text="活度："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:id="@+id/output1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/ac2_tv_rate"
            android:text="百分比："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:id="@+id/output2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/ac2_tv_class"
            android:text="放射源分类信息："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:id="@+id/output4"/>
    </LinearLayout>



</LinearLayout>